extends ../layouts/main

block content
  h1 Editar Paciente

  if paciente
    form(method="POST", action=`/pacientes/${paciente.id}/edit`)
      .mb-3
        label.form-label(for="dni") DNI
        input.form-control(type="text", name="dni", id="dni", required, value=paciente.dni)
      .mb-3
        label.form-label(for="nombre") Nombre
        input.form-control(type="text", name="nombre", id="nombre", required, value=paciente.nombre)
      .mb-3
        label.form-label(for="apellido") Apellido
        input.form-control(type="text", name="apellido", id="apellido", required, value=paciente.apellido)
      .mb-3
        label.form-label(for="fecha_nacimiento") Fecha de nacimiento
        input.form-control(type="date", name="fecha_nacimiento", id="fecha_nacimiento", required, value=paciente.fecha_nacimiento)
      .mb-3
        label.form-label(for="sexo") Sexo
        select.form-control(name="sexo", id="sexo", required)
          option(value="") Seleccione
          option(value="M", selected=paciente.sexo === 'M') Masculino
          option(value="F", selected=paciente.sexo === 'F') Femenino
          option(value="O", selected=paciente.sexo === 'O') Otro
      .mb-3
        label.form-label(for="direccion") Dirección
        input.form-control(type="text", name="direccion", id="direccion", required, value=paciente.direccion)
      .mb-3
        label.form-label(for="telefono") Teléfono
        input.form-control(type="text", name="telefono", id="telefono", required, value=paciente.telefono)
      .mb-3
        label.form-label(for="email") Email
        input.form-control(type="email", name="email", id="email", required, value=paciente.email)
      .mb-3
        label.form-label(for="mutual") Mutual
        input.form-control(type="text", name="mutual", id="mutual", value=paciente ? paciente.mutual : '')
      button.btn.btn-primary(type="submit") Guardar Cambios
  else
    .alert.alert-danger Paciente no encontrado.